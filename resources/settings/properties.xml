<resources>
	<properties>

		<property id="distTime" type="number"><!-- Value 0 means average over distance, anything else means average over time-->0</property>
		<property id="averageOver" type="number"><!--Value is the metres to be averaged over in distance mode or seconds in time mode-->200</property>
		<property id="showPace" type="boolean">true</property>
	</properties>
	<settings>
		<setting propertyKey="@Properties.distTime" title="@Strings.distTimeTitle">
			<settingConfig type="list">
				<listEntry value="0">@Strings.useDist</listEntry>
				<listEntry value="1">@Strings.useTime</listEntry>
			</settingConfig>
		</setting>
		<setting propertyKey="@Properties.averageOver" title="@Strings.avgTitle">
			<settingConfig type="numeric"></settingConfig>
		</setting>
		<setting propertyKey="@Properties.showPace" title="@Strings.paceTitle">
			<settingConfig type="boolean"></settingConfig>
		</setting>
	</settings>
	<strings>
		<string id="distTimeTitle">Average over distance or time?</string>
		<string id="useDist">Distance</string>
		<string id="useTime">Time</string>
		<string id="avgTitle">Distance (m) or time (s) to average over</string>
		<string id="paceTitle">Display as pace? (otherwise speed)</string>
	</strings>
</resources>